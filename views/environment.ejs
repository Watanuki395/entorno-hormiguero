    const canvas = createCanvas(600, 400);
    canvas.parent('canvas-container');

    // Obtén los datos de alimentos y enemigos desde las variables pasadas desde el servidor
    const environmentData = <%= unescape(JSON.stringify(environmentData)) %>;
    const decodedData = JSON.parse(decodeURIComponent(environmentData));
    console.log(decodedData);



    // Tu lógica para dibujar y animar los elementos aquí
    // ...

    // Ejemplo de dibujar los elementos de alimentos y enemigos
    fill(255, 0, 0); // Rojo para los alimentos
    fill(0, 0, 255); // Azul para los enemigos
    for (const item of environmentData) {
      if (item.type === "food") {
        ellipse(item.x, item.y, 20, 20);
      } else if (item.type === "enemy") {
        rect(item.x, item.y, 30, 30);
      }
    }
